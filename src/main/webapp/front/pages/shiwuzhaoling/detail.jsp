<body>

    <div id="app">
        <div class="data-detail">
            <div class="data-detail-breadcrumb">
                <span class="layui-breadcrumb">
                    <a href="../home/home.jsp">首页</a>
                    <a><cite>{{detail.shiwuzhaolingName}}</cite></a>
                </span>


            </div>
            <div class="layui-row">
                <div class="layui-col-md5">
                    <div class="layui-carousel" id="swiper">
                        <div carousel-item id="swiper-item">
                            <div v-for="(item,index) in swiperList" v-bind:key="index">
                                <img class="swiper-item" :src="item.img">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="layui-col-md7" style="padding-left: 20px;">
                    <h1 class="title">{{detail.shiwuzhaolingName}}</h1>
                        <div v-if="detail.shiwuzhaolingUuidNumber" class="detail-item">
                            <span>失物编号：</span>
                            <span class="desc">
                                        {{detail.shiwuzhaolingUuidNumber}}
                            </span>
                        </div>

                        <div v-if="detail.shiwuzhaolingTypes" class="detail-item">
                            <span>物品类型：</span>
                            <span class="desc">
                                {{detail.shiwuzhaolingValue}}
                            </span>
                        </div>

                        <div v-if="detail.statusTypes" class="detail-item">
                            <span>物品状态：</span>
                            <span class="desc">
                                {{detail.statusValue}}
                            </span>
                        </div>

                        <div v-if="detail.shiwuzhaolingTime" class="detail-item">
                            <span>拾遗时间：</span>
                            <span class="desc">
                                        {{detail.shiwuzhaolingTime}}
                            </span>
                        </div>

                        <div v-if="detail.shiwuzhaolingDizhi" class="detail-item">
                            <span>拾遗地址：</span>
                            <span class="desc">
                                        {{detail.shiwuzhaolingDizhi}}
                            </span>
                        </div>

                    <div class="detail-item">

                        <button onclick="renlingwupin()" v-if="detail.statusTypes == 1" type="button" class="layui-btn layui-btn-warm">
                                认领物品
                        </button>
                    </div>

                    <div class="detail-item" style="text-align: right;">
                    </div>
                </div>
            </div>

            <div class="layui-row">
                <div class="layui-tab layui-tab-card">

                    <ul class="layui-tab-title">
                            <li class="layui-this">详情</li>
                            <li>留言</li>
                    </ul>

                    <div class="layui-tab-content">
                            <div class="layui-tab-item layui-show">
                                <div v-html="myFilters(detail.shiwuzhaolingContent)"></div>
                            </div>

                            <div class="layui-tab-item">
                                <div class="message-container">
                                    <form class="layui-form message-form" style="padding-right: 20px;border-bottom: 0;">
                                        <div class="layui-form-item layui-form-text">
                                            <label class="layui-form-label">
                                                留言
                                            </label>
                                            <div class="layui-input-block">
                                                <textarea name="shiwuzhaolingLiuyanText" id="shiwuzhaolingLiuyanText" required lay-verify="required" placeholder="留言内容" class="layui-textarea"></textarea>
                                            </div>
                                        </div>
                                        <div class="layui-form-item">
                                            <div class="layui-input-block">
                                                <button class="layui-btn btn-submit" lay-submit lay-filter="shiwuzhaolingLiuyanText">
                                                    立即提交
                                                </button>
                                                <button type="reset" class="layui-btn layui-btn-primary">
                                                    重置
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="message-list">
                                        <div class="message-item" v-for="(item,index) in shiwuzhaolingLiuyanDataList" v-bind:key="index">
                                            <div class="username-container">
                                                <img class="avator" :src="item.yonghuPhoto">
                                                <span class="username">
                                                    {{item.yonghuName}}
                                                </span>
                                            </div>
                                            <div class="content">
                                                    <span style="color: rgb(175, 135, 77)">
                                                        留言:<div v-html="item.shiwuzhaolingLiuyanText"></div>
                                                    </span>
                                            </div>
                                            <div class="content">
                                                    <span style="color: rgb(175, 135, 77)">
                                                        回复:<div v-html="item.replyText"></div>
                                                    </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="pager" id="shiwuzhaolingLiuyanPager"></div>
                                </div>
                            </div>


                    </div>
                </div>
            </div>
        </div>    </div>

<script type="text/javascript" src="../../xznstatic/js/jquery.min.js"></script>
<script src="../../xznstatic/js/bootstrap.min.js" type="text/javascript" charset="utf-8"></script>
<script src="../../layui/layui.js"></script>
<script src="../../js/vue.js"></script>
<!-- 组件配置信息 -->
<script src="../../js/config.js"></script>
<!-- 扩展插件配置信息 -->
<script src="../../modules/config.js"></script>
<!-- 工具方法 -->
<script src="../../js/utils.js"></script>

<script>
    Vue.prototype.myFilters= function (msg) {
        if(msg != null){
            return msg.replace(/\n/g, "<br>");
        }else{
            return "";
        }
    };
    var vue = new Vue({
        el: '#app',
        data: {
            // 轮播图
            swiperList: [],
            // 数据详情
            detail: {
                id: 0
            },
            // 商品标题
            title: '',

            storeupFlag: 0,//收藏 [0为收藏 1已收藏]
            //系统推荐
            shiwuzhaolingRecommendList: [],
            dataList: [],
            // 当前详情页表
            detailTable: 'shiwuzhaoling',
            // 留言列表
            shiwuzhaolingLiuyanDataList: [],
        },
        //  清除定时器
        destroyed: function () {
            // 不知道具体作用
            // window.clearInterval(this.inter);
        },
        methods: {
            jump(url) {
                jump(url)
            }
        }
    });

    layui.use(['layer', 'form', 'element', 'carousel', 'http', 'jquery', 'laypage'], function () {
        var layer = layui.layer;
        var element = layui.element;
        var form = layui.form;
        var carousel = layui.carousel;
        var http = layui.http;
        var jquery = layui.jquery;
        var laypage = layui.laypage;

        var limit = 10;

        // 设置数量
        jquery('#buyNumber').val(vue.buyNumber);

        // 数据ID
        var id = http.getParam('id');
        vue.detail.id = id;
        // 当前详情
        http.request(`${vue.detailTable}/detail/` + id, 'get', {}, function (res) {
            // 详情信息
            vue.detail = res.data;
            vue.title = vue.detail.shiwuzhaolingName;
           // 轮播图片
            vue.swiperList = vue.detail.shiwuzhaolingPhoto ? vue.detail.shiwuzhaolingPhoto.split(",") : [];
            var swiperItemHtml = '';
            for (let item of vue.swiperList) {
                swiperItemHtml +=
                        '<div>' +
                        '<img class="swiper-item" src="' + item + '" style="margin-top: 50px;" >' +
                        '</div>';
            }
            jquery('#swiper-item').html(swiperItemHtml);
            // 轮播图
            carousel.render({
                elem: '#swiper',
                width: swiper.width, height: swiper.height,
                arrow: swiper.arrow,
                anim: swiper.anim,
                interval: swiper.interval,
                indicator: swiper.indicator
            });
        });

        // 系统推荐
        http.request(`shiwuzhaoling/list`, 'get', {
            page: 1,
            limit: 5,
            shiwuzhaolingTypes: vue.detail.shiwuzhaolingTypes,


                statusTypes: vue.detail.statusTypes,

        }, function (res) {
            vue.shiwuzhaolingRecommendList = res.data.list;
        });

        // 获取留言
        http.request(`${vue.detailTable}Liuyan/list`, 'get', {
            page: 1,
            limit: limit,
            shiwuzhaolingId: vue.detail.id
        }, function (res) {
            vue.shiwuzhaolingLiuyanDataList = res.data.list;
            // 分页
            laypage.render({
                elem: 'shiwuzhaolingLiuyanPager',
                count: res.data.total,
                limit: limit,
                jump: function (obj, first) {
                    //首次不执行
                    if (!first) {
                        http.request(`${vue.detailTable}Liuyan/list`, 'get', {
                            page: obj.curr,
                            limit: obj.limit,
                            shiwuzhaolingId: vue.detail.id
                        }, function (res) {
                            vue.shiwuzhaolingLiuyanDataList = res.data.list
                        })
                    }
                }
            });
        });

        // 提交留言
        form.on('submit(shiwuzhaolingLiuyanText)', function (data) {
            data.yonghuId = localStorage.getItem('userid');
            data.tableName = localStorage.getItem('userTable');
            data.shiwuzhaolingLiuyanText =jquery("#shiwuzhaolingLiuyanText").val();
            if(data.shiwuzhaolingLiuyanText == null || data.shiwuzhaolingLiuyanText == ''){
                layer.msg("留言不能为空", {
                    time: 2000,
                    icon: 2
                });
                return false;
            }
            data.shiwuzhaolingId = vue.detail.id;
            http.requestJson(`${vue.detailTable}Liuyan/add`, 'post', data, function (res) {
                layer.msg('留言成功', {
                    time: 2000,
                    icon: 6
                }, function () {
                    window.location.reload();
                });
                return false
            });
            return false
        });



    });

    function renlingwupin() {
        vue.jump("../shiwurenling/add.jsp?shiwuzhaolingId="+vue.detail.id)
    }




</script>
</body>
</html>
